generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id // clerk id

  // multiple users can have the same card
  cardCollection Card[]
  

  // settings

}

model Card {
  id String @id @default(uuid())

  thumbnail String
  question String
  answers String[]
  correctAnswer Int
  explanation String
  level Int
  subject String

  users User[]
}